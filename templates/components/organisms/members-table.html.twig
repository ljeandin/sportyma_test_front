<div class="members-table">
    <div class="members-table__row members-table__row--header">
        <span>Prénom, nom</span>
        <span>Né le</span>
        <span>Équipe</span>
        <span>Connexion</span>
        <span>Contacter</span>
    </div>
    {% for member in members %}
        <div class="members-table__row">
            {% include '/components/molecules/nametag.html.twig' with {
                avatar: member.avatar,
                name: member.name,
            } only %}
            <span>{{ member.birth }}</span>
            {% include '/components/molecules/member-teams.html.twig' with {
                teams : member.teams,
            } only %}

            {% include '/components/molecules/latest-connected.html.twig' with {
                connectedDate: member.connected|default(null),
            } only %}
            <button class="button button--icon-only">
               <img src="{{ asset('build/images/icons/chat.svg') }}" alt="" />
            </button>
        </div>
    {% endfor %}
</div>